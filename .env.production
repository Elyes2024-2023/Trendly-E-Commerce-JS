# API URLs
NEXT_PUBLIC_API_URL=https://api.trendly.com
NEXT_PUBLIC_SOCKET_URL=wss://socket.trendly.com

# Authentication
NEXTAUTH_URL=https://trendly.com
NEXTAUTH_SECRET=your_production_secret_key

# OAuth Providers
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Database
DATABASE_URL=postgresql://user:password@production-db.trendly.com:5432/trendly_prod

# Analytics
NEXT_PUBLIC_MIXPANEL_TOKEN=your_production_mixpanel_token
NEXT_PUBLIC_GA_TRACKING_ID=your_production_ga_tracking_id

# Storage
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_production_cloud_name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# Redis
REDIS_URL=redis://production-redis.trendly.com:6379 